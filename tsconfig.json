{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noEmit": true,
    "noImplicitThis": true, 
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "ramda": ["."],
      "ramda/src/*": ["./src/*"]
    }
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },  
  "exclude": ["**/node_modules/*"]
}
